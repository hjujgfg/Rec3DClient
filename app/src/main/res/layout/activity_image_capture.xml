<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ImageCapture">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Xcoord"/>
    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Xcoord"
        android:layout_height="wrap_content"
        android:id="@+id/Ycoord"/>
    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Ycoord"
        android:layout_height="wrap_content"
        android:id="@+id/Zcoord"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Xrot"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Zcoord"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Yrot"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Xrot"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Zrot"
        android:layout_below="@+id/Yrot"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
